<p id="notice"><%= notice %></p>

<h1>Tarjetas de credito</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Numero</th>
      <th>Cvc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_card2s.each do |credit_card2| %>
      <tr>
        <td><%= credit_card2.name %></td>
        <td><%= credit_card2.last_name %></td>
        <td><%= credit_card2.number %></td>
        <td><%= credit_card2.cvc %></td>
        <td><%= link_to 'Detalles', credit_card2, class: 'btn btn-light btn-sm' %></td>
        <td><%= link_to 'Editar', edit_credit_card2_path(credit_card2) , class: 'btn btn-light btn-sm'%></td>
        <td><%= link_to 'Eliminar', credit_card2, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar tarjeta de credito', new_credit_card2_path %>
