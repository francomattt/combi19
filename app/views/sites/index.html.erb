

<div class="container-fluid">
<h3>Destinos disponibles </h3>

<div class="container-fluid">
<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>Nombre</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
	
       <tr align="center">
        <td><%= site.name %></td>
        <td><%= link_to 'Detalles', site , class: 'btn btn-light btn-sm'%></td>
        <td><%= link_to 'Editar', edit_site_path(site), class: 'btn btn-light btn-sm' %></td>
        <td><%= link_to 'Eliminar',destroy_site_path(site), data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar nuevo destino', new_site_path, class: 'btn btn-light btn-sm' %>


</div>
</div>

