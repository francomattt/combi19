

<div class="container-fluid">
<h3>Rutas disponibles </h3>

<div class="container-fluid">
<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>Ciudad de origen</th>
      <th>Ciudad destino</th>
      <th>Descripción</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ways.each do |way| %>
	
       <tr align="center">
        <td><%= Site.find(way.start).name %></td>
        <td><%= Site.find(way.end_way).name %></td>
        <td><%= way.description.truncate(20) %></td>
        <td><%= link_to 'Detalles', way , class: 'btn btn-light btn-sm'%></td>
        <td><%= link_to 'Editar', edit_way_path(way), class: 'btn btn-light btn-sm' %></td>
        <td><%= link_to 'Eliminar',destroy_way_path(way), data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar nueva ruta', new_way_path, class: 'btn btn-light btn-sm' %>


</div>
</div>


