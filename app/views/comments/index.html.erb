<p id="notice"><%= notice %></p>

<h1>Comentarios</h1>


<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Puntaje</th>
      <th>Comentario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.name %></td>
        <td><%= comment.score %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Mostrar', ticket_comment_path(comment.ticket,comment) %></td>
        <td><%= link_to 'Editar', edit_ticket_comment_path(comment.ticket,comment) %></td>
        <td><%= link_to 'Eliminar', ticket_comment_path(comment.ticket,comment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if @comments.count == 0 %>
  <%= link_to 'Nuevo puntaje y comentario', new_ticket_comment_path(@ticket.id) %>
<% end %>

