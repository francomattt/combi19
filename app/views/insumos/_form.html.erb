<%= form_with(model: insumo, local: true) do |form| %>
  <% if insumo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(insumo.errors.count, "error") %> No se pudo guardar el insumo:</h2>

      <ul>
        <% insumo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  


  <div class="field">
    <%= form.label :tipo %>
    <%= form.text_field :tipo %>
  </div>

  <div class="field">
    <%= form.label :cant %>
    <%= form.number_field :cant %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
