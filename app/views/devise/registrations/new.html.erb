<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name, "Nombre *" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Apellido *" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", required: true %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo electrónico *" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
  </div>

  <div class="field">
    <%= f.label :birth_day, "Fecha de nacimiento *" %><br />
    <%= f.date_field :birth_date, autofocus: true, autocomplete: "birth_date", required: true %>
  </div>

  <div class="field">
    <%= f.label :dni, "Dni *" %><br />
    <%= f.number_field :dni, autofocus: true, autocomplete: "dni", required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña *" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> Caracteres como mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmar contraseña *" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarme" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
