<h2>Iniciar sesión</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "Correo electrónico" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Correo electrónico", required: true %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %><br />
    <%= f.password_field :password, autocomplete: "Contraseña actual", required: true %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "Recuerdame" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesión" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
