<div class="container-fluid">
<h3>Combis disponibles </h3>

<div class="container-fluid">
<table class="table">
  <thead class="thead-dark">
    <tr align="center">
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Email</th>
      <th>Dni</th>
      <th>Fecha de nacimiento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drivers.each do |driver| %>
	
       <tr align="center">
        <td><%= driver.name %></td>
        <td><%= driver.last_name %></td>
        <td><%= driver.email %></td>
        <td><%= driver.dni %></td>
        <td><%= driver.birth_date.strftime("%d-%m-%Y")%></td>
        <td><%= link_to 'Detalles', show_driver_path(driver.id) , class: 'btn btn-light btn-sm'%></td>
        <td><%= link_to 'Editar', edit_driver_path(driver.id), class: 'btn btn-light btn-sm' %></td>
        <td><%= link_to 'Eliminar', destroy_driver_path(driver.id), data: { confirm: '¿Estás seguro?' }, class: 'btn btn-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Registrar nuevo chofer', new_driver_path, class: 'btn btn-light btn-sm' %>


</div>
</div>
