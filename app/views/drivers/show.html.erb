<% if user_signed_in? %>    
  <%if current_user.admin?%>
    <p>
      <strong>Nombre:</strong>
      <%= @driver.name %>
    </p>

    <p>
      <strong>Apellido:</strong>
      <%= @driver.last_name %>
    </p>

    <p>
      <strong>Correo electrónico:</strong>
      <%= @driver.email %>
    </p>

    <p>
      <strong>Dni:</strong>
      <%= @driver.dni %>
    </p>

    <p>
      <strong>Numero telefónico:</strong>
      <%= @driver.phone_number %>
    </p>

    <%= link_to 'Editar chofer', edit_driver_path(@driver), class: 'btn btn-primary btn-sm' %> |
    <%= link_to 'Volver', drivers_path, class: 'btn btn-default btn-sm' %>
  <%end%>
<%end%>